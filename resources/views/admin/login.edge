  <!-- Mobile Security Notice -->
  <div class="lg:hidden fixed bottom-4 left-4 right-4 fade-in-delay-2">
    <div class="warning-box p-4 rounded-2xl text-white">
      <div class="flex items-center space-x-2 mb-2">
        <span class="text-xl">üîê</span>
        <span class="font-semibold">Security Notice</span>
      </div>
      <p class="text-sm text-white/90">
        Admin access is monitored. Ensure you're on a secure network before logging in.
      </p>
    </div>
  </div>

  <script>
    // Enhanced admin form validation and security features
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.querySelector('form');
      const adminIdInput = document.getElementById('admin_id');
      const passwordInput = document.getElementById('password');
      const twoFaInput = document.getElementById('two_fa_code');
      
      // Admin ID validation
      adminIdInput.addEventListener('blur', function() {
        const adminId = this.value.trim();
        
        if (adminId.length >= 3) {
          this.style.borderColor = '#4338ca';
        } else if (adminId.length > 0) {
          this.style.borderColor = '#ef4444';
        }
      });
      
      // Password strength validation
      passwordInput.addEventListener('input', function() {
        const password = this.value;
        
        if (password.length >= 8) {
          this.style.borderColor = '#4338ca';
        } else if (password.length >= 6) {
          this.style.borderColor = '#f59e0b';
        } else if (password.length > 0) {
          this.style.borderColor = '#ef4444';
        }
      });
      
      // 2FA code formatting
      twoFaInput.addEventListener('input', function() {
        let value = this.value.replace(/\D/g, '');
        if (value.length <= 6) {
          this.value = value;
        }
        
        if (value.length === 6) {
          this.style.borderColor = '#4338ca';
        }
      });
      
      // Enhanced form submission with security checks
      form.addEventListener('submit', function(e) {
        const submitBtn = this.querySelector('button[type="submit"]');
        const originalText = submitBtn.querySelector('span').textContent;
        
        // Security validation
        const adminId = adminIdInput.value.trim();
        const password = passwordInput.value;
        
        if (adminId.length < 3) {
          alert('Admin ID must be at least 3 characters long');
          e.preventDefault();
          return;
        }
        
        if (password.length < 6) {
          alert('Password must be at least 6 characters long');
          e.preventDefault();
          return;
        }
        
        // Update button state
        submitBtn.querySelector('span').innerHTML = 'üîê Authenticating...';
        submitBtn.disabled = true;
        submitBtn.style.opacity = '0.7';
        
        // Log security attempt (in real app, this would be server-side)
        console.log('Admin login attempt:', {
          timestamp: new Date().toISOString(),
          adminId: adminId,
          userAgent: navigator.userAgent,
          ip: 'logged-server-side'
        });
        
        // Simulate authentication delay
        setTimeout(() => {
          submitBtn.querySelector('span').textContent = originalText;
          submitBtn.disabled = false;
          submitBtn.style.opacity = '1';
        }, 3000);
      });
      
      // Security monitoring - detect rapid multiple attempts
      let loginAttempts = 0;
      form.addEventListener('submit', function() {
        loginAttempts++;
        if (loginAttempts > 3) {
          console.warn('Multiple login attempts detected');
          // In real app, this would trigger security measures
        }
      });
      
      // Clear attempt counter after 15 minutes
      setTimeout(() => {
        loginAttempts = 0;
      }, 15 * 60 * 1000);
    });
  </script>
